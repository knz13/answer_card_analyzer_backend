# Runtime Configuration for Answer Card Analyzer
# This file controls debug mode and environment settings

# Debug Mode (true/false)
DEBUG_MODE=true

# Environment (DEV/PROD)
ENVIRONMENT=DEV

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# HTTP Server Settings
HTTP_PORT_DEV=8000
HTTP_PORT_PROD=8080
HTTP_HOST=0.0.0.0

# WebSocket Settings
WEBSOCKET_URI_DEV=ws://localhost:8000
WEBSOCKET_URI_PROD=wss://orca-app-h5tlv.ondigitalocean.app

# Memory Monitoring
MEMORY_THRESHOLD_PERCENT=90
MEMORY_CHECK_INTERVAL=2 